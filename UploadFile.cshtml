@model ProjectName.Models.UploadViewModel

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Upload Profile Picture</title>
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">
    <style>
        body {
            background-image: url('../newbg.JPG');
            background-size: cover;
            background-position: center;
            color: #fff;
            background-color: black;
        }

        .container {
            margin-top: 50px;
        }

        .card {
            background-color: rgba(0, 0, 0, 0.5);
            color: #fff;
        }

        .card-body {
            padding: 20px;
        }

        .card-title {
            margin-bottom: 20px;
        }

        .form-group label {
            color: #fff;
        }

        .btn-primary {
            background-color: #007bff;
            border-color: #007bff;
        }

            .btn-primary:hover {
                background-color: #0056b3;
                border-color: #0056b3;
            }

        #responseMessage {
            margin-top: 20px;
        }
    </style>
</head>
<body>
    <div class="container">
        <div class="card">
            <div class="card-body">
                <h5 class="card-title">Upload Profile Picture</h5>
                <form id="uploadForm" enctype="multipart/form-data">
                    <div class="form-group">
                        <label for="file">Choose a profile picture:</label>
                        <input type="file" id="file" name="File" class="form-control-file" required>
                    </div>
                    <button type="submit" class="btn btn-primary">Upload</button>
                </form>
                <div id="responseMessage" class="alert" style="display:none;"></div>
            </div>
        </div>
    </div>

    <script src="https://code.jquery.com/jquery-3.5.1.min.js"></script>
    <script>
        $(document).ready(function () {
            $('#uploadForm').submit(function (e) {
                e.preventDefault(); // Prevent the default form submission

                // Create FormData object to hold file data
                var formData = new FormData(this);

                $.ajax({
                    url: '@Url.Action("UploadFile", "Home")', // Controller action that will handle the upload
                    type: 'POST',
                    data: formData,
                    contentType: false,  // Do not set content type (let the browser handle it)
                    processData: false,  // Prevent jQuery from converting the form data into a query string
                    success: function (response) {
                        if (response.success) {
                            $('#responseMessage').removeClass('alert-danger').addClass('alert-success').html(response.message).show();
                        } else {
                            $('#responseMessage').removeClass('alert-success').addClass('alert-danger').html(response.message).show();
                        }
                    },
                    error: function () {
                        $('#responseMessage').removeClass('alert-success').addClass('alert-danger').html('An error occurred while uploading the file.').show();
                    }
                });
            });
        });
    </script>
</body>
</html>
